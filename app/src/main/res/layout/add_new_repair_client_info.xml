<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/close_popup_button_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/close" />

        <TextView
            android:id="@+id/step_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_popup_button_1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/aldrich"
            android:text="Step: 1 of 3"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/step_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/step_number">

            <ImageView
                android:id="@+id/client_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16.25dp"
                android:background="@drawable/client" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/client_icon"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/aldrich"
                android:text="Client info"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/car_bw_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/car_bw" />

            <ImageView
                android:id="@+id/tools_bw_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16.25dp"
                android:background="@drawable/tools_bw" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_icons"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/aldrich"
            android:text="Client's personal informations"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phone_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aldrich"
            android:text="Phone number"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_number_container"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number_container"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:backgroundTint="#0FAE02"
            android:fontFamily="@font/aldrich"
            android:letterSpacing="0"
            android:text="Next"
            android:textSize="13sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:icon="@drawable/next_arrow"
            app:iconGravity="textEnd"
            app:iconSize="20dp">

        </com.google.android.material.button.MaterialButton>

    </RelativeLayout>

</ScrollView>