<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/close_popup"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/close" />

        <TextView
            android:id="@+id/step_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_popup"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/aldrich"
            android:text="Step: 3 of 3"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/step_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/step_number">

            <ImageView
                android:id="@+id/client_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16.5dp"
                android:background="@drawable/client" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/client_icon"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/aldrich"
                android:text="Client info"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/car_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_icon"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/aldrich"
                android:text="Car info"
                android:textColor="#000000"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/tools_bw_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16.25dp"
                android:background="@drawable/tools" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tools_bw_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/aldrich"
                android:text="To repair"
                android:textColor="#000000"
                android:textSize="14sp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_icons"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/aldrich"
            android:text="To repair"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aldrich"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/description"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_label">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alatsi"
                android:inputType="textMultiLine"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/cost_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aldrich"
            android:text="Cost"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cost"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cost_label">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alatsi"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/upload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cost"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0D8712"
            android:fontFamily="@font/aldrich"
            android:text="Or upload image"
            android:textSize="12sp"
            app:icon="@drawable/camera"
            app:iconGravity="textEnd"
            app:iconSize="25dp">

        </com.google.android.material.button.MaterialButton>

        <ImageView
            android:id="@+id/testImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/submit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:backgroundTint="#0D8712"
            android:fontFamily="@font/aldrich"
            android:text="Submit"
            android:textSize="13sp"
            android:textStyle="bold"
            app:iconGravity="textEnd"
            app:iconSize="15dp">

        </com.google.android.material.button.MaterialButton>

    </RelativeLayout>

</ScrollView>